<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccommodationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/create_acc_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginVertical="20dp">
        </TextView>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/create_acc_name_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/create_acc_name"/>
            <EditText
                android:id="@+id/name"
                android:autofillHints="name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/create_acc_name_hint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_role_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/confirmation"/>
            <RadioGroup
                android:id="@+id/is_automatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/automatic_true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/automatic_true"/>

                <RadioButton
                    android:id="@+id/automatic_false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/automatic_false"/>


            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/description_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/acc_description"/>
            <EditText
                android:id="@+id/description"
                android:autofillHints="name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/create_acc_name_hint"/>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:showDividers="middle"
            android:divider="@drawable/empty_wide_divider">

            <Button
                android:id="@+id/delete_accommodation_images_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_all_images"
                android:onClick="deleteImages"
                android:backgroundTint="?attr/colorAccent"/>

            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_image"
                android:onClick="selectImage"
                android:backgroundTint="?attr/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_country_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_country"/>
            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_city_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_city"/>
            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/city_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_address_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_address"/>
            <EditText
                android:id="@+id/street"
                android:autofillHints="postalAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/address_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_number_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_street_number"/>
            <NumberPicker
                android:id="@+id/number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>
<!--        map-->
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/acc_type"/>
            <Spinner
                android:id="@+id/type_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/deadline_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/create_deadline"/>
            <NumberPicker
                android:id="@+id/deadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/min_guests_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/min_guests"/>
            <NumberPicker
                android:id="@+id/min_guests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/max_guests_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/max_guests"/>
            <NumberPicker
                android:id="@+id/max_guests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/default_price_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/default_price"/>
            <EditText
                android:id="@+id/default_price"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/price_type_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/price_type"/>
            <RadioGroup
                android:id="@+id/is_price_per_guest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/price_per_guest_true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/per_guest"/>

                <RadioButton
                    android:id="@+id/price_per_guest_false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/total"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/amenities_header_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/choose_amenities"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/scroll_amenity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical"
                android:padding="16dp">
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_weight="2"
            android:id="@+id/register_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="?attr/colorTertiary"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/create_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_acc_btn"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorTertiary"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>