<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.reservation_list.SearchRequestsFragment"
    android:id="@+id/fragment_search_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_requests"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/accommodationNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/accommodation_name"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startDateRequestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:layout_alignParentLeft="true"
            android:backgroundTint="?attr/colorTertiary"
            android:textColor="?attr/colorOnTertiary"/>

        <Button
            android:id="@+id/endDateRequestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:layout_alignParentRight="true"
            android:backgroundTint="?attr/colorTertiary"
            android:textColor="?attr/colorOnTertiary"/>

    </RelativeLayout>

    <Button
        android:id="@+id/searchRequestsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginTop="16dp"/>

</LinearLayout>