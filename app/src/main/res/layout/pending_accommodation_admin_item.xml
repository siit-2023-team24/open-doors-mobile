<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:id="@+id/pending_accommodation_admin_card_item"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/accommodationImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/accommodation_image"
        android:maxWidth="200dp"
        android:contentDescription="@string/accommodation_image_descriptor" />

    <TextView
        android:id="@+id/accommodationName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Accommodation name"
        android:layout_weight="9" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:divider="@drawable/empty_wide_divider">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorAccent"
            android:textColor="?attr/colorPrimary"
            android:text="@string/deny"
            android:id="@+id/accommodation_financial_report_btn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/approve"
            android:id="@+id/edit_accommodation_btn"/>


    </LinearLayout>


</LinearLayout>