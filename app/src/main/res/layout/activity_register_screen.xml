<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/reg_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginVertical="20dp">
        </TextView>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_role_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/role_picker"/>
            <RadioGroup
                android:id="@+id/role"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/role_guest"/>

                <RadioButton
                    android:id="@+id/radioOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/role_host"/>


            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_email_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/login_email"/>
            <EditText
                android:id="@+id/username"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/email_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_password_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="2"
                android:textAlignment="textStart"
                android:text="@string/login_password"/>
            <EditText
                android:id="@+id/password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/password_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_confirm_password_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/confirm_password"/>
            <EditText
                android:id="@+id/confirm_password"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/password_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_first_name_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_first_name"/>
            <EditText
                android:id="@+id/first_name"
                android:autofillHints="name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/first_name_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_last_name_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_last_name"/>
            <EditText
                android:id="@+id/last_name"
                android:autofillHints="name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/last_name_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_country_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_country"/>
            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_city_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_city"/>
            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/city_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_address_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_address"/>
            <EditText
                android:id="@+id/street"
                android:autofillHints="postalAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/address_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_number_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_street_number"/>
            <NumberPicker
                android:id="@+id/number"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/number_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_phone"/>
            <EditText
                android:id="@+id/phone"
                android:autofillHints="phone"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/phone_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:id="@+id/register_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button"
                android:layout_marginHorizontal="30dp"
                android:backgroundTint="?attr/colorTertiary"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_button"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorTertiary"
                android:layout_marginHorizontal="30dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>