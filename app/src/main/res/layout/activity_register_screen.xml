<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_role_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/role_picker"/>
            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioOption1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/role_guest"/>

                <RadioButton
                    android:id="@+id/radioOption2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/role_host"/>


            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_email_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/login_email"/>
            <EditText
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/email_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_password_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="2"
                android:textAlignment="textStart"
                android:text="@string/login_password"/>
            <EditText
                android:autofillHints="password"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/password_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_confirm_password_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/confirm_password"/>
            <EditText
                android:autofillHints="password"
                android:inputType="textPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/password_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_first_name_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_first_name"/>
            <EditText
                android:autofillHints="name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/first_name_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_last_name_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_last_name"/>
            <EditText
                android:autofillHints="name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/last_name_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_country_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_country"/>
            <Spinner
                android:id="@+id/country_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_city_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_city"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/city_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_address_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_address"/>
            <EditText
                android:autofillHints="postalAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/address_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/register_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:text="@string/register_phone"/>
            <EditText
                android:autofillHints="phone"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textAlignment="textStart"
                android:hint="@string/phone_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:id="@+id/register_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back_button"
                android:layout_margin="30dp"
                android:backgroundTint="?attr/colorAccent"
                android:textColor="@color/dark_orange"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up_button"
                android:backgroundTint="?attr/colorSecondary"
                android:textColor="?attr/colorPrimary"
                android:layout_margin="30dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>