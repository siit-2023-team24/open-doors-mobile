<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.reservation_list.ReservationRequestListPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:showDividers="middle"
        android:divider="@drawable/empty_wide_divider">

        <Button
            android:id="@+id/searchRequestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:backgroundTint="#E1DDDB"
            android:drawableLeft="@drawable/ic_search"
            android:text="Search"
            android:textAlignment="textStart"
            android:textColor="#000000" />

        <Button
            android:id="@+id/filterRequestsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ABDFF1"
            android:drawableLeft="@drawable/ic_filter"
            android:text="Filter"
            android:textColor="#000000" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/reservation_request_list"
        android:layout_marginTop="70dp"/>

</FrameLayout>